{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Django WSGI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "autoStartBrowser": false,
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Django ASGI (Daphne)",
            "type": "debugpy",
            "request": "launch",
            "module": "daphne",
            "args": [
                "-p", "8000", "-b", "0.0.0.0",
                "config.asgi:application"
            ],
            "django": true,
            "cwd": "${workspaceFolder}",
            "autoStartBrowser": false,
            "env": {
                "DJANGO_SETTINGS_MODULE": "config.settings.production"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Worker Win",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": ["-A", "config.celery_app", "worker", "-l", "info", "--pool", "solo"],

        },
        {
            "name": "Worker Lin",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": ["-A", "config.celery_app", "worker", "-l", 
                     "info", "-c", "3",
                     "-Q", "bitrix,olx,waweb,waba,bot"],
            "python": "${workspaceFolder}/.venv/bin/python",
        },
        {
            "name": "Beat",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "args": ["-A", "config.celery_app", "beat", "-l", "info", "--scheduler", "django_celery_beat.schedulers:DatabaseScheduler"],
        }
    ]
}
