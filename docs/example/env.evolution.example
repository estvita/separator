# URL для вебхуков (внутренний адрес сервиса web в Docker)
WEBHOOK_GLOBAL_URL=http://web:8000/api/waweb/
# Включение глобальных вебхуков
WEBHOOK_GLOBAL_ENABLED=true
WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS=false

# События, которые нужно отправлять
WEBHOOK_EVENTS_APPLICATION_STARTUP=true
WEBHOOK_EVENTS_MESSAGES_SET=true
WEBHOOK_EVENTS_MESSAGES_UPSERT=true
WEBHOOK_EVENTS_CONNECTION_UPDATE=true

# Ключ API для управления Evolution (придумайте свой)
AUTHENTICATION_API_KEY=YOUR_SECURE_TOKEN

# URL сервера Evolution (внутренний адрес сервиса evolution в Docker)
SERVER_URL=http://evolution:8080

# Настройки базы данных (используется общая база Postgres из стека Separator)
DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI=postgresql://separator:separator@db:5432/evolution
DATABASE_CLIENT_NAME=evolution

# Настройки Redis (используется общий Redis из стека Separator)
CACHE_REDIS_ENABLED=true
CACHE_REDIS_URI=redis://redis:6379/0
CACHE_REDIS_PREFIX=evolution