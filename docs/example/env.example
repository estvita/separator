# --- Evolution API Settings ---

# URL для вебхуков (внутренний адрес сервиса web в Docker)
WEBHOOK_GLOBAL_URL=http://web:8000/api/waweb/
# Включение глобальных вебхуков
WEBHOOK_GLOBAL_ENABLED=true
WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS=false

# События, которые нужно отправлять
WEBHOOK_EVENTS_APPLICATION_STARTUP=true
WEBHOOK_EVENTS_QRCODE_UPDATED=false
WEBHOOK_EVENTS_MESSAGES_SET=false
WEBHOOK_EVENTS_MESSAGES_UPSERT=true
WEBHOOK_EVENTS_MESSAGES_EDITED=false
WEBHOOK_EVENTS_MESSAGES_UPDATE=false
WEBHOOK_EVENTS_MESSAGES_DELETE=false
WEBHOOK_EVENTS_SEND_MESSAGE=false
WEBHOOK_EVENTS_CONTACTS_SET=false
WEBHOOK_EVENTS_CONTACTS_UPSERT=false
WEBHOOK_EVENTS_CONTACTS_UPDATE=false
WEBHOOK_EVENTS_PRESENCE_UPDATE=false
WEBHOOK_EVENTS_CHATS_SET=false
WEBHOOK_EVENTS_CHATS_UPSERT=false
WEBHOOK_EVENTS_CHATS_UPDATE=false
WEBHOOK_EVENTS_CHATS_DELETE=false
WEBHOOK_EVENTS_GROUPS_UPSERT=false
WEBHOOK_EVENTS_GROUPS_UPDATE=false
WEBHOOK_EVENTS_GROUP_PARTICIPANTS_UPDATE=false
WEBHOOK_EVENTS_CONNECTION_UPDATE=true
WEBHOOK_EVENTS_REMOVE_INSTANCE=true
WEBHOOK_EVENTS_LOGOUT_INSTANCE=true
WEBHOOK_EVENTS_LABELS_EDIT=false
WEBHOOK_EVENTS_LABELS_ASSOCIATION=false
WEBHOOK_EVENTS_CALL=false

# Ключ API для управления Evolution (придумайте свой)
AUTHENTICATION_API_KEY=

# URL сервера Evolution (внутренний адрес сервиса evolution в Docker)
# Используется и самим Evolution (как SERVER_URL), и Separator (как EVOLUTION_SERVER_URL)
SERVER_URL=http://evolution:8080
EVOLUTION_SERVER_URL=http://evolution:8080

# Настройки базы данных (используется общая база Postgres из стека Separator)
DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI=postgresql://separator:separator@db:5432/evolution
DATABASE_CLIENT_NAME=evolution

# Настройки Redis (используется общий Redis из стека Separator)
CACHE_REDIS_ENABLED=true
CACHE_REDIS_URI=redis://redis:6379/0
CACHE_REDIS_PREFIX=evolution